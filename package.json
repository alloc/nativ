{
  "name": "nativ",
  "version": "0.1.0",
  "description": "Core utilities and components for React Native apps",
  "bin": {
    "nativ": "dist/cli/main.js"
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch"
  },
  "dependencies": {
    "@expo/metro-config": "~0.20.17",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-preset-expo": "~13.2.3",
    "cmd-ts": "^0.13.0",
    "svgexport": "^0.4.2",
    "tinyglobby": "^0.2.14"
  },
  "peerDependencies": {
    "@react-navigation/native": "^7",
    "@shopify/restyle": "^2",
    "drizzle-orm": "*",
    "drizzle-plus": "*",
    "expo": "^53",
    "expo-font": "^13",
    "expo-linear-gradient": "^14",
    "expo-router": "^5",
    "expo-splash-screen": "^0.30",
    "expo-sqlite": "^15",
    "expo-status-bar": "^2",
    "moti": "^0.30",
    "radashi": "^12",
    "react": "^19",
    "react-native": "^0.79",
    "react-native-get-random-values": "^1",
    "react-native-reanimated": "^3"
  },
  "devDependencies": {
    "@alloc/prettier-config": "^1.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "tsc-lint": "^0.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "prettier": "@alloc/prettier-config",
  "files": [
    "dist",
    "src",
    "metro.config.js",
    "babel-preset.js"
  ],
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ui": {
      "react-native": "./src/ui/index.ts",
      "types": "./dist/ui.d.ts",
      "import": "./dist/ui.js",
      "require": "./dist/ui.cjs"
    },
    "./hooks": {
      "react-native": "./src/hooks/index.ts",
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./providers": {
      "react-native": "./src/providers/index.ts",
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.js",
      "require": "./dist/providers.cjs"
    },
    "./polyfills": {
      "react-native": "./src/polyfills/index.ts",
      "types": "./dist/polyfills.d.ts",
      "import": "./dist/polyfills.js",
      "require": "./dist/polyfills.cjs"
    },
    "./metro-config": "./metro.config.js",
    "./babel-preset": "./babel-preset.js"
  }
}
