{
  "name": "nativ",
  "version": "0.2.0",
  "description": "Core utilities and components for React Native apps",
  "bin": {
    "nativ": "dist/cli/main.js"
  },
  "scripts": {
    "build": "tsup-node --clean",
    "dev": "tsup-node --watch",
    "update-lockfile": "node scripts/update-lockfile.ts"
  },
  "dependencies": {
    "babel-plugin-inline-import": "^3.0.0",
    "cmd-ts": "^0.13.0",
    "svgexport": "^0.4.2",
    "tinyglobby": "^0.2.14"
  },
  "peerDependencies": {
    "@expo/metro-config": "*",
    "@expo/metro-runtime": "*",
    "@react-navigation/native": "*",
    "@shopify/flash-list": "*",
    "@shopify/restyle": "*",
    "@types/react": "*",
    "babel-preset-expo": "*",
    "drizzle-orm": "*",
    "drizzle-plus": "*",
    "expo": "^54.0.0-alpha.0",
    "expo-build-properties": "*",
    "expo-constants": "*",
    "expo-dev-client": "*",
    "expo-device": "*",
    "expo-font": "*",
    "expo-haptics": "*",
    "expo-linear-gradient": "*",
    "expo-linking": "*",
    "expo-notifications": "*",
    "expo-router": "*",
    "expo-splash-screen": "*",
    "expo-sqlite": "*",
    "expo-status-bar": "*",
    "moti": "*",
    "radashi": "*",
    "react": "*",
    "react-native": "*",
    "react-native-get-random-values": "*",
    "react-native-keyboard-controller": "*",
    "react-native-reanimated": "*",
    "react-native-safe-area-context": "*",
    "react-native-screens": "*",
    "typescript": "*"
  },
  "devDependencies": {
    "@alloc/prettier-config": "^1.0.0",
    "@types/node": "^24.3.0",
    "picospawn": "^0.3.2",
    "tsc-lint": "^0.1.9",
    "tsup": "^8.5.0"
  },
  "prettier": "@alloc/prettier-config",
  "files": [
    "dist",
    "src",
    "metro.config.js",
    "babel-preset.js"
  ],
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ui": {
      "react-native": "./src/ui/index.ts",
      "types": "./dist/ui.d.ts",
      "default": "./dist/ui.js"
    },
    "./hooks": {
      "react-native": "./src/hooks/index.ts",
      "types": "./dist/hooks.d.ts",
      "default": "./dist/hooks.js"
    },
    "./providers": {
      "react-native": "./src/providers/index.ts",
      "types": "./dist/providers.d.ts",
      "default": "./dist/providers.js"
    },
    "./polyfills": {
      "react-native": "./src/polyfills/index.ts",
      "types": "./dist/polyfills.d.ts",
      "default": "./dist/polyfills.js"
    },
    "./metro-config": "./metro.config.js",
    "./babel-preset": "./babel-preset.js"
  }
}
